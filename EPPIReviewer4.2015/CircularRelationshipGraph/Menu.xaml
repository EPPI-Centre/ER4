<UserControl x:Class="CircularRelationshipGraph.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="500" Width="800">

  <Grid x:Name="LayoutRoot" Background="White">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="100"/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <StackPanel Orientation="Vertical">
      <Button Content="Example One" Click="Button_Click"/>
      <Button Content="Example Two" Click="Button_Click_1"/>
      <Button Content="Example Three" Click="Button_Click_2"/>
    </StackPanel>

    <Border Margin="10"
            Grid.Column="1"    
            BorderBrush="LightGray" BorderThickness="3">
    <ContentControl x:Name="content"                 
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                    VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">

    </ContentControl>
    </Border>
  </Grid>
</UserControl>
