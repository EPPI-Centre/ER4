</form>
<div class="row">
    <script type="text/javascript" src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script type="text/javascript">
       
        window.onload = function () {
            var chart = new CanvasJS.Chart("RCTchartContainer", {
                theme: "theme2",
                animationEnabled: true,
                title: {
                    text: "RCT Scores Distribution:"
                },
                data: [
                    {
                        type: "column",
                        dataPoints: [
                            @foreach(var lab in Model.RCTDataPoints)
                            {
                                @:{ y: @lab.Value , label: '@lab.Key' },
                            }
                            ]

                    }
                ]
            });
            chart.render();
            var chart2 = new CanvasJS.Chart("HumanchartContainer", {
                theme: "theme2",
                animationEnabled: true,
                title: {
                    text: "Human Study Scores Distribution:"
                },
                data: [
                    {
                        type: "column",
                        dataPoints: [
                            @foreach(var lab in Model.HumanDataPoints)
                            {
                                @:{ y: @lab.Value , label: '@lab.Key' },
                            }
                            ]

                    }
                ]
            });
            chart2.render();
        };
    </script>
    <div id="RCTchartContainer" class="row; table-bordered" style="height:350px;"></div>
    <div id="HumanchartContainer" class="row; table-bordered" style="height:350px;"></div>
</div>

